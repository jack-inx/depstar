	  	<% content_for :javascript do %>
	  	 	<script type="text/javascript">
	  	 		function selectPaymentMethod(sender)
	    		{
					if(sender == "paypal")
					{
						$("#paypal_email").css("display", "block");
					}
					else
					{
						$("#paypal_email").css("display", "none");
					}
					
	    			return;
				}
			</script>
		<% end %>
