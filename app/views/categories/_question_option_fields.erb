<div class="fields" style="border: 1px solid gray; padding: 5px; width: 250px; margin: 10px 0px; float: left;">
  
  <div style="float: left;">
  <%= f.label :name %><br />
  <%= f.text_field :name, :style=>'width: 100px;' %><br />
  </div>
  
  <div style="float: left;">
  <%= f.label :multiplier, "Multiplier if not checked" %><br />
  <%= f.text_field :multiplier, :style=>'width: 100px;' %><br />
  </div>
    
  <div style="float: left;">
    <%= f.hidden_field :_destroy %>
    <%= link_to_function "Remove", "remove_fields(this)" %>
  </div>
</div>

<div style="clear: both;"></div>
