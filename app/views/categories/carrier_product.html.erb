<p id="notice">
	<%= notice %>
</p>

<div class="product">	
	<div class="items-holder">
		<table class="sell-table">
			<thead>
				<tr>					
					<td colspan="5">						
							<% if !@series.nil? %>
								Choose your <%=  "#{@carrier.name} #{@series.name} " %>
							<% else %>
								Choose your <%=  "#{@carrier.name} #{@manufacturer.name} #{@category.name}" %>
							<% end %>											
					</td>
				</tr>
			</thead>
			<tbody>
				<% @products.each_slice(5) do |slice| -%>
				<tr>
					<% @counter = 0 %>
					<% slice.each do |product| %>
					<% @counter += 1 %>
					<td width=177px> <%#= link_to image_tag(carrier.photo.url(:small)), carrier %>
					<%= link_to image_tag("http://depstar.com/assets/products/missing_small.gif"), product %>
					<p>
						<%= link_to product.name,product %>
					</p></td>
					<% end %>
					<% for i in @counter.. @products.count - 8 %>
					<td></td>
					<% end %>
				</tr>
				<% end %>

			</tbody>
		</table>
	</div>
</div>

