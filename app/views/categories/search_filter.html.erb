<%#= render_breadcrumbs :separator => ' / ' %>

<p id="notice">
	<%= notice %>
</p>

<div class="product">
	<div class="items-holder">

		<% if !@apple_product %>

		<table class="sell-table">
			<thead>
				<tr>
					<!--<td colspan="5">These are the <%#= @category.name %> we currently buy: </td> -->
					<td colspan="5">What brand of <%= @category.name %> do you have?</td>
				</tr>
			</thead>
			<tbody>
				<% @category.manufacturers.each_slice(5) do |slice| -%>
				<tr>
					<% @counter = 0 %>
					<% slice.each do |manufact| %>
					<% @counter += 1 %>
					<td>
						<% if manufact.photo.nil? %>
							<%= link_to image_tag("http://depstar.com/assets/products/missing_small.gif"),"/#{params[:category]}/#{manufact.name.downcase.gsub(' ','_')}",:manufact_id => manufact %>
						<% else %>
							<%= link_to image_tag("#{manufact.photo.url(:small)}"),"/#{params[:category]}/#{manufact.name.downcase.gsub(' ','_')}",:manufact_id => manufact %>
							<%#= manufact.photo.url %>
						<% end %>
						<p style="text-align:center;">
							<%= link_to manufact.name, manufact_carrier_path(:cat_id=>params[:id],:manufact_id => manufact),:style=>"color:black;" %>
							<%= hidden_field_tag :cat_id,params[:id] %>
							<%= hidden_field_tag :manufact_id,manufact %>
						</p>
					</td>
					<% end %>
				</tr>
				<% end %>
			</tbody>
		</table>
		<% else %>
		<table class="sell-table">
			<thead>
				<tr>
					<!--<td colspan="5">These are the <%#= @category.name %> we currently buy: </td> -->
					<td colspan="5">Select your <%= @category.name.singularize %></td>
				</tr>
			</thead>
			<tbody>
				<% @category.series_lists.each_slice(5) do |slice| -%>
				<tr>
					<% slice.each do |series| %>
					<td> <%= link_to image_tag("http://depstar.com/assets/products/missing_small.gif"), "/#{params[:category]}/#{series.name.downcase.gsub(' ','_')}" %>
					<p style="text-align:center;">
						<%= link_to series.name, manufact_carrier_path(:cat_id => params[:id],:series => series),:style=>"color:black;" %>
						<%= hidden_field_tag :cat_id,params[:id] %>
						<%= hidden_field_tag :series,series %>
					</p></td>
					<% end %>
				</tr>
				<% end %>
			</tbody>
		</table>
		<% end %>

	</div>
</div>

