	function update_versions_div(type, category_name, user_data) {
		jQuery.ajax({
			url : "/update_versions",
			type : "POST",
			data : {
				"category_name" : category_name,
				"user" : user_data,
				"type" : type
			},
			success : function(data) {
				$('.series_list').show();
				$('.edit_product').hide();
			}
		});

	}

</script>