<div class="series_list" id="versionsDiv" style="display:none;">
	<lable style="color: #5E6469;display: block;float: left;font-size: 1em;font-weight: bold;width: 20%;">
		<%= @name %>
	</lable>
	<% if @series_list.nil? %>
		<% @series_list = Array.new %>
	<% end %>
	<% if @carrier_list.nil? %>
		<% @carrier_list = Array.new %>
	<% end %>
	
	<%= select_tag "series_id", options_for_select(@series_list.uniq), :prompt => "Select #{@name}" , :onchange => "update_versions_series_div('series',this.value,#{session[:current_user]})" %>
</div>

