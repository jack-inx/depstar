	function update_versions_series_div(type, category_name, user_data) {
		jQuery.ajax({
			url : "/update_versions_for_series",
			type : "POST",
			data : {
				"series" : category_name,
				"user" : user_data,
				"type" : type
			},
			success : function(data) {
				//$('.series_list').show();
				$('.carrier_new_123').show();
			}
		});

	}
</script>
