<div class="title_bar" id="title_bar">
	<div id="titlebar_left">		
		<h2 id="page_title">Edit Affiliate User</h2>
	</div>
	<div id="titlebar_right">
		<div class="action_items">
			<% if session[:admin] %>
			<span class="action_item"><a href="/admin/users/new">New Affiliate User</a></span>
			<% end %>
		</div>
	</div>
</div>
<%#= render "affiliate_form" %>

<div id="active_admin_content" class="without_sidebar">
	<div id="main_content_wrapper">
		<div id="main_content">
			<%= form_for(@user,:url => "/affiliates/update/#{@user.id}" , :html => {:multipart => true}) do |f| %>
			
			<fieldset class="inputs">
				<legend>
					<span>Admin</span>
				</legend>
				<ol>
					<li class="email input optional stringish" id="user_email_input">
						<%= f.label :email,:class=>" label" %>
						<%= f.text_field :email %>
						<%= @user.errors[:email].join(", ") %>
					</li>
				
				
					<li class="email input optional stringish" id="user_email_input">
						<%= f.label :crypted_password,:class=>" label" %>
						<%= f.text_field :crypted_password %>
						<%= @user.errors[:crypted_password].join(", ") %>
					</li>
				</ol>
			</fieldset>
			<fieldset class="inputs">
				<ol>
					<li class="email input optional stringish" id="user_email_input">
						<%= f.label :status %>
						<%= f.check_box :status %>
						<%= @user.errors[:status].join(", ") %>
						<%= hidden_field_tag :is_affiliate_admin, false  %>
						<%= hidden_field_tag :user_id, session[:current_user]  %>
					</li>
				</ol>
			</fieldset>
			<fieldset class="actions">
				<ol>
					<li class="action input_action " id="user_submit_action">
						<%= f.submit "Edit Affiliate" %>
					</li>
					<li class="cancel">
						<a href="/affiliates/users">Cancel</a>
					</li>
				</ol>
			</fieldset>			
			<% end %>			
		</div>
	</div>
</div>