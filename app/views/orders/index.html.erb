<h2>Orders</h2>

<table class="hovertable">  

<% @orders.each do |order| %>
  <tr>
    <td><%= order.user.username %></td>
    <td><%= order.first_name %> <%= order.last_name %></td>
    <td><%= order.email %></td>
    <td><%= order.products.all.collect{ |p| [p.name] }.join(", ") %></td>
    <td>
    	<% get_product_price(order.products, order.id).each do |price_type| %>
    	<%= price_type.all.collect{ |p| Order::Condition[p.price_type_id - 1][0] }.join(', ') %>
    	<% end %>
    </td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

