<div id="main">
	<div class="holder">
		<div class="checkout-block">
			<h2>Checkout</h2>
			<ul id="steps">
				<li class="checked first"><a class="email" href="#"><span>Email</span></a></li>
				<li class="active"><a class="get-paid" href="#"><span>Get Paid</span></a></li>
				<li><a class="shipping" href="#"><span>Shipping</span></a></li>
				<li class="last"><a class="confirm" href="#"><span>Confirm</span></a></li>
			</ul>
			<div class="steps-area">
				<h4>Payment</h4>
				<div class="text-block">
					<p>How would you like to get paid?</p>
				</div>
				<div class="wrapper">
					<div class="box check">
						<form class="contact-form" action="#">
							<fieldset>
								<div class="row">
									<input type="text" value="Payable to" />
								</div>
								<div class="row">
									<input type="text" value="Address 1" />
								</div>
								<div class="row">
									<input type="text" value="Address 2" />
								</div>
								<div class="row">
									<input type="text" value="City" />
								</div>
								<div class="row">
									<input class="state" type="text" value="State" />
									<input class="zip" type="text" value="Zip" />
								</div>
								<div class="box-frame">
									<span class="box-title">Send me a Check</span>
									<span class="submit">
										<input type="submit" value="Continue" />
									</span>
								</div>
							</fieldset>
						</form>
					</div>
					<div class="box paypal">
						<form class="contact-form" action="#">
							<fieldset>
								<div class="row right">
									<input type="text" value="Paypal email address" autofocus="autofocus" />
								</div>
								<div class="box-frame">
									<span class="box-title">Pay me via paypal</span>
									<span class="submit">
										<input type="submit" value="Continue" />
									</span>
									<a href="#" class="btn-recieve">Receieve payment same day</a>
								</div>
							</fieldset>
						</form>
					</div>
				</div>
			</div>
			<div class="checkout-content">
				<div class="heading">
					<h4>Your Box Contents</h4>
				</div>
				<div class="wrapper">
					<img src="/images/img13.png" alt="image description" width="67" height="66" />
					<div class="info">
						<span class="name">Apple iPhone 4S <br />16Gb At&amp;t</span>
						<span class="price">$314 <a class="remove" href="#">remove</a></span>
					</div>
				</div>
				<span class="total-price">Total Estimated Value <strong>$314</strong></span>
			</div>
		</div>
	</div>
</div>
