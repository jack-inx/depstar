<div id="main">
	<div class="holder">
		<div class="checkout-block">
			
			<% if @shipping_detail.errors.any? %>
			  <div class="error_messages">
			    <h2><%= pluralize(@shipping_detail.errors.count, "error") %> prohibited this user from being saved:</h2>
			    <ul>
			    <% @shipping_detail.errors.full_messages.each do |msg| %>
			      <li><%= msg %></li>
			    <% end %>
			    </ul>
			  </div>
			<% end %>
			
			<h2>Checkout</h2>
			<ul id="steps">
				<li class="active first"><a class="email" href="#"><span>Email</span></a></li>
				<li><a class="get-paid" href="#"><span>Get Paid</span></a></li>
				<li><a class="shipping" href="#"><span>Shipping</span></a></li>
				<li class="last"><a class="confirm" href="#"><span>Confirm</span></a></li>
			</ul>
			<div class="steps-area">
				<h4>Your Email Address</h4>
				<p>Weâ€™ll use this email address to send you shipping details and progress updates every step of the way.</p>
				<!-- <form class="contact-form" action="#"> -->
				<%= form_for @shipping_detail, :html => { :class => 'contact-form' }, url: wizard_path, :method => :put  do |f| %>
					<fieldset>
						<div class="row right">
							<label for="email">Email:</label>
							<!-- <input type="text" id="email" /> -->
							<%= f.text_field :email %>
						</div>
						<!-- <p><a class="notice" href="#">I already have a depstar account</a></p> -->
						<div class="row row-submit">
							<span class="submit">
								<input type="submit" value="Continue" />
							</span>
						</div>
					</fieldset>
				<!-- </form> -->
				<% end %>
			</div>
			<div class="checkout-content">
				<div class="heading">
					<h4>Your Box Contents</h4>
				</div>
				<div class="wrapper">
					<img src="/images/img13.png" alt="image description" width="67" height="66" />
					<div class="info">
						<span class="name">Apple iPhone 4S <br />16Gb At&amp;t</span>
						<span class="price">$314 <a class="remove" href="#">remove</a></span>
					</div>
				</div>
				<span class="total-price">Total Estimated Value <strong>$314</strong></span>
			</div>
		</div>
	</div>
</div>
