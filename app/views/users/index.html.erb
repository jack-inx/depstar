<%= render :file => "/admin/index"  %>

<h2>Users</h2>

<table class="hovertable">
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Last Login</th>
    <th>Last IP</th>
    <th>Logins</th>
    <th>Logins Failed</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.username %></td>
    <td><%=h user.email %></td>
    <td><%=h user.last_login_at %></td>
    <td><%=h user.last_login_ip %></td>
    <td><%=h user.login_count %></td>
    <td><%=h user.failed_login_count %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %> &nbsp;
    <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<% if current_user %>
		<%= link_to 'New User', new_user_path %>
<% end %>
