<div class="product-description">
	<!-- <form action="#"> -->		
		<fieldset>
			<div class="image">
				<a href="#">
					<%= image_tag @product.photo.url(:small) %>
				</a>
			</div>
			<div class="conditions">
				<%= form_for @question_response, :method => :get, :remote => true do |f| %>
					<p id="notice"><%= notice %></p>
					<%= f.hidden_field :product_id, :value => @product.id %>

					<% if @product.category.try(:question_1_is_enabled) %>
						<p>
							<b><%= @product.category.question_1_name %> </b> <br/>
							<%= f.radio_button(:question_1, "True") %> Yes
							<%= f.radio_button(:question_1, "False") %> No
						</p>
					<% end %>

					<% if @product.category.try(:question_2_is_enabled) %>
						<p>
							<b><%= @product.category.question_2_name %> </b> <br/>
							<%= f.radio_button(:question_2, "True") %> Yes
							<%= f.radio_button(:question_2, "False") %> No
						</p>
					<% end %>

					<% if @product.category.try(:question_3_is_enabled) %>
						<p>
							<b><%= @product.category.question_3_name %> </b> <br/>
							<%= f.radio_button(:question_3, "1") %> Poor <br/>
							<%= f.radio_button(:question_3, "2") %> Fair <br/>
							<%= f.radio_button(:question_3, "3") %> Good <br/>
							<%= f.radio_button(:question_3, "4") %> Perfect <br/>						
						</p>
					<% end %>

					<% if @product.category.try(:question_4_is_enabled) %>
						<p>
							<b><%= @product.category.question_4_name %> </b> <br/>
							<% @product.category.question_options.each do |question_option| %>
								<%= check_box_tag "question_response[question_4][]", question_option.id %> <%= question_option.name %> <br/>
							<% end %>
						</p>
					<% end %>

					<%= submit_tag "Get Quote" %>
				<% end %>			
				
