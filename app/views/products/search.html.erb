<% content_for :title, "Search - " %>
<p id="notice"><%= notice %></p>

<div style='padding: 0px 20px 0px 20px; '>
	<% if @products.size == 0 %>
	<div class='search_no_items_found'>
		We are sorry that the item has not been added to our system yet.<br/>
		<%= mail_to "offers@depstar.com", "Email", :subject => "Instant offer request" %> us for an instant offer<br/>
		or<br/>
		<a href="https://livechat.boldchat.com/aid/140369408601088650/bc.chat?cwdid=2429043129259919230" target="_blank" onclick="window.open((window.pageViewer && pageViewer.link || function(link){return link;})(this.href + (this.href.indexOf('?')>=0 ? '&amp;' : '?') + 'url=' + escape(document.location.href)), 'Chat2325828698917037556', 'toolbar=0,scrollbars=1,location=0,statusbar=0,menubar=0,resizable=1,width=640,height=480');return false;">Click here</a> for live support!<br/>
		Thank you for choosing Depstar<br/>
	</div>
	<% end %>
	<div class="b" style='padding-bottom: 0px; width: 746px;'>
		<h2 style='color: gray; float: left;'>Select Your Product</h2>
		<% if @products.count > 0 %>
		<div class="custom_pagination">
			<%= will_paginate @products, :params=>{:name=> params[:name]}, :container => false %>
			<div class="page_info">
	      <%= page_entries_info @products %>
	    </div>
	  </div>
		<% end %>
		<ul class="list-products">
			<% @products.each do |product| %>
			<div style="float: left; width: 150px; text-align: center;">
				<li style='padding-top: 0px; margin: 0px 0px 50px 0px;'>
					<div>	
						<ul style='position: relative; top: 10px;'>
							<li>
								<%= image_tag(product.photo.url(:small)) %>
							</li>
							<li style='min-height: 30px;'><strong><%= product.name %></strong></li>
							<li>
								<%= link_to "Sell Now", product %>
							</li>
						</ul>
						<% if current_user %>
							<br/>
							<%= link_to 'Show', product %>
			    			<%= link_to 'Edit', edit_product_path(product) %>
			    			<%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %>
						<% end %>
					</div>	
				</li>
			</div>
			<% end %>

		</ul>
		<% if @products.count > 0 %>
		<div class="custom_pagination">
			<%= will_paginate @products, :params=>{:name=> params[:name]}, :container => false %>
			<div class="page_info">
	      <%= page_entries_info @products %>
	    </div>
	  </div>
		<% end %>
		
	</div>
</div>