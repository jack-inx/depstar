<% content_for :title, "Search - " %>
<p id="notice"><%= notice %></p>

<div style='padding: 0px 20px 0px 20px; '>
	
	<ul class="list-products">
	
		<% @products.each do |product| %>
		<div style="float: left; width: 200px; text-align: center;">
			<li style='padding-top: 0px; margin: 0px 0px 50px 0px;'>
				<div>	
					<ul style='position: relative; top: 10px;'>
						<li>
							<%#= link_to image_tag(product.photo.url(:small)), product %>
							<%= image_tag(product.photo.url(:small)) %>
						</li>
						<li style='min-height: 30px;'><strong><%= product.name %></strong></li>
						<li>
							<%= link_to "Sell Now", product %>
						</li>
					</ul>
					<% if current_user %>
						<br/>
						<%= link_to 'Show', product %>
		    			<%= link_to 'Edit', edit_product_path(product) %>
		    			<%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %>
					<% end %>
				</div>	
			</li>
		</div>
		<% end %>

	</ul>
	
</div>