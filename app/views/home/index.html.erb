<table>
  <tr>
    <th><h2>Categories</h2></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= link_to category.name, category %> (<%= category.products.count %>)</td>
  </tr>
<% end %>
	<tr>
  		<td><b><%= link_to "Show All", categories_path %></b></td>
	</tr>
</table>

<br/>


<div>
	<h2>Products</h2>
	<% @products.each do |product| %>
	<div style="border: 1px solid lightgray; float: left; width: 200px; background: white; text-align: center;">
		<div>
			<%= link_to product.name, product %>
		</div>
		<div>
			<%= link_to image_tag(product.photo.url(:small)), product %>
		</div>
		<div>		
			<%= link_to "Sell yours now", product %>
		</div>	
	</div>
	<% end %>
</div>

<div style="clear: both;" />

<div style='float: left; margin-top:30px;'>
	<%= link_to 'Admin', admin_path %>
</div>