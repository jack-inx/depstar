<div id="login">
	<h2>Depstar Affiliate Login</h2>
	
	<%= form_for @user_session,:class=>"formtastic admin_user" do |f| %>	
		<fieldset class="inputs">
			<ol>
				<li class="email input required autofocus stringish" id="admin_user_email_input">
					
					<%= f.label :username,"Username*",:class=>"label" %>					
					<%= f.text_field :username %>

				</li>
				<li class="password input required stringish" id="admin_user_password_input">
					<%= f.label :password,"Password*",:class=>"label" %>					
					<%= f.password_field :password %>
				</li>				
			</ol>
		</fieldset>
		<fieldset class="actions">
			<ol>
				<li class="action input_action " id="admin_user_submit_action">
					<%= f.submit "Login" %>
				</li>
			</ol>
		</fieldset>
	<% end %>
	

</div>